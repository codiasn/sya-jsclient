{
    "compilerOptions": {
        "target": "ESNext",
        "lib": [
            "ESNext",
            "dom"
        ],
        "outDir": "lib",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "declaration": true,
        "types": [
            "./types"
        ],
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "lib"
    ]
}